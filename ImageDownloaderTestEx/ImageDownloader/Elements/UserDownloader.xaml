<UserControl x:Class="ImageDownloader.Elements.UserDownloader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageDownloader.Elements"
             mc:Ignorable="d" 
            Height="auto" Width="auto" Background="DarkSlateGray" Margin="5" MaxWidth="180">
    <StackPanel>
        <Border Margin="10 5 10 5" BorderThickness="2" BorderBrush="Black">
            <Image x:Name="img"  Height="150" Stretch="Fill" Width="150"/>
        </Border>
        <TextBox Margin="10 5 10 5" TextWrapping="Wrap" x:Name="SetUrl" MaxWidth="240"/>
        <Button x:Name="StartButton" Content="Начать загрузку" Click="StartButton_Click" Margin="10 5 10 5" Padding="5"/>
        <Button x:Name="CancelButton" Content="Отменить" Click="CancelButton_Click" Margin="10 5 10 5" Padding="5" IsEnabled="False"/>
        <ProgressBar x:Name="ProgressBar" Height="20" Margin="10 5 10 5" Minimum="0" Maximum="1"/>
        <TextBlock x:Name="ResultText" Margin="10 5 10 5" TextWrapping="Wrap" IsEnabled="False" Foreground="White"/>
    </StackPanel>
</UserControl>
